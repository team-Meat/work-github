<div class="row login-row">
	<div class="style= margin-top: 50px;">
		<h2>配送先登録/一覧</h2>
		<%= form_for(@shipping) do |f| %>
			<div class="field">
				<label class="postal-code-label">郵便番号(ハイフンなし)</label>
				<%= f.text_field :postal_code, autofocus: true %>
			</div>
			<div class="field">
				<label class="address-label">住所</label>
				<%= f.text_field :street_address, autofocus: true %>
			</div>
				<div class="field">
			<label class="address-label">宛名</label>
				<%= f.text_field :receive_name, autofocus: true %>
			</div>
			<%= f.submit "登録する", class: "btn btn-success submit" %>
		<% end %>
		<table class="table table-bordered address-table">
			<thead>
				<tr class="table-head">
					<th>郵便番号</th>
					<th>住所</th>
					<th>宛名</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @shippings.each do |shipping|  %>
					<tr>
						<td><%= shipping.postal_code %></td>
						<td><%= shipping.street_address %></td>
						<td><%= shipping.receive_name %></td>
						<td><%= link_to "編集する", edit_shipping_path(shipping.id),class: "btn btn-primary"%></td>
						<td><%= link_to "削除する", shipping_path(shipping.id),  class: "btn btn-danger", method: :delete %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>